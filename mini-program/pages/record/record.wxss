/* 筛选栏 */
.filter-bar {
  background: #FFFFFF;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 宝宝选择器样式（记录页面） */
.baby-selector {
  margin-bottom: 20rpx;
}

/* 单个宝宝信息显示（紧凑版） */
.single-baby-info {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  color: white;
}

.baby-avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.baby-details {
  flex: 1;
}

.baby-name-small {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.baby-age-small {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
}

/* 多宝宝选择器（记录页面紧凑版） */
.multi-baby-selector {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.selector-header {
  margin-bottom: 12rpx;
}

.baby-mini-tabs {
  display: flex;
  gap: 12rpx;
  overflow-x: auto;
  padding-bottom: 6rpx;
}

.baby-mini-tab {
  min-width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 16rpx;
  background: white;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.baby-mini-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: white;
  transform: scale(1.05);
}

.mini-tab-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.mini-tab-name {
  font-size: 22rpx;
  font-weight: bold;
  text-align: center;
}

.filter-tabs {
  display: flex;
  margin-bottom: 20rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: #666666;
  background: #F8F9FA;
  border-radius: 12rpx;
  margin-right: 10rpx;
  transition: all 0.3s ease;
}

.filter-tab:last-child {
  margin-right: 0;
}

.filter-tab.active {
  background: #4A90E2;
  color: #FFFFFF;
}

.date-picker {
  display: flex;
  justify-content: center;
}

.date-display {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
}

.date-icon {
  margin-left: 12rpx;
  font-size: 24rpx;
}

/* 时间轴容器 */
.timeline-container {
  padding: 0 20rpx;
}

/* 时间轴 */
.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline-item {
  position: relative;
  margin-bottom: 30rpx;
}

.timeline-dot {
  position: absolute;
  left: -40rpx;
  top: 20rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #4A90E2;
  z-index: 2;
}

.timeline-dot.breastfeeding {
  background: #FF6B6B;
}

.timeline-dot.bottle,
.timeline-dot.formula {
  background: #4ECDC4;
}

.timeline-dot.solid {
  background: #45B7D1;
}

.timeline-dot.diaper {
  background: #96CEB4;
}

.timeline-dot.growth {
  background: #FFEAA7;
}

.timeline-line {
  position: absolute;
  left: -31rpx;
  top: 40rpx;
  width: 2rpx;
  height: calc(100% + 10rpx);
  background: #E5E5E5;
  z-index: 1;
}

.timeline-item:last-child .timeline-line {
  display: none;
}

.timeline-content {
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 记录卡片 */
.record-card {
  padding: 24rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.record-type {
  display: flex;
  align-items: center;
}

.record-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.record-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
}

.record-body {
  border-top: 1rpx solid #F0F0F0;
  padding-top: 16rpx;
}

.record-details {
  margin-bottom: 16rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 8rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666666;
  width: 120rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333333;
  flex: 1;
}

.record-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #E9ECEF;
  transform: scale(0.95);
}

.action-btn.delete {
  background: #FFF5F5;
  color: #E53E3E;
}

.action-btn.delete:active {
  background: #FED7D7;
}

.action-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
}

.action-btn.delete .action-text {
  color: #E53E3E;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999999;
}

