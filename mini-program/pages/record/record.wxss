.breast-selector {
  display: flex;
  gap: 20rpx;
}

.breast-option {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background: #F8F9FA;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  transition: all 0.3s ease;
}

.breast-option.active {
  background: #4A90E2;
