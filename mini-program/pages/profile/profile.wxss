/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  display: block;
}

.user-role {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.family-info {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.family-name {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.member-count {
  font-size: 26rpx;
  opacity: 0.8;
  display: block;
}

.empty-family {
  text-align: center;
  padding: 40rpx 0;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  display: block;
}

.family-actions {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  justify-content: center;
}

.family-actions .btn {
  min-width: 200rpx;
  margin: 0;
}

.family-actions .btn-outline {
  color: white;
}

/* 未授权用户样式 */
.unauthorized-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.unauthorized-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.unauthorized-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.unauthorized-section .btn {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  font-weight: 600;
  min-width: 200rpx;
  margin-bottom: 10rpx;
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.members-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 15rpx;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-info {
  flex: 1;
  min-width: 0; /* 允许内容收缩 */
  display: flex;
  flex-direction: column;
}

.member-roles-container {
  display: flex;
  align-items: center;
  width: 100%;
}

.member-roles {
  display: flex;
  gap: 10rpx;
  flex-wrap: nowrap; /* 保持在一行不换行 */
  overflow: hidden; /* 防止溢出 */
  flex: 1;
}

.member-role {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  background: #e3f2fd;
  color: #1976d2;
  white-space: nowrap;
  flex-shrink: 0; /* 防止压缩 */
}

.member-role.creator {
  background: #fff3e0;
  color: #f57c00;
}

.btn-compact {
  padding: 12rpx 4rpx; /* 保持高度不变，宽度变成现在的一半 */
  font-size: 24rpx; /* 字体变大 */
  border-radius: 30rpx;
  min-width: auto; /* 移除最小宽度限制 */
  height: auto; /* 确保高度自适应 */
  margin-left: 10rpx; /* 添加左边距 */
  flex-shrink: 0; /* 防止按钮被压缩 */
}

.btn-outline.btn-compact {
  padding: 10rpx 2rpx;
}

.baby-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.baby-avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.baby-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.baby-details {
  flex: 1;
}

.baby-name {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 10rpx;
}

.baby-age {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.baby-id {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.baby-stats {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
  display: block;
}

.empty-baby {
  text-align: center;
  padding: 40rpx 0;
}

.empty-baby .empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-baby .empty-text {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  display: block;
}

.settings-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 15rpx;
}

.setting-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 50rpx;
}

.setting-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.setting-arrow {
  color: #ccc;
  font-size: 36rpx;
}

/* 退出登录按钮 */
.logout-section {
  padding: 0 30rpx 30rpx;
  margin-top: 20rpx;
  text-align: center;
}

.debug-card {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.debug-card .btn {
  width: 100%;
}

.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 500;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #667eea;
  color: #667eea;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  min-width: auto; /* 移除最小宽度限制 */
}

.btn-outline.btn-small {
  padding: 10rpx 22rpx;
}

.btn-xs {
  padding: 12rpx 12rpx; /* 进一步减小左右padding */
  font-size: 20rpx;
  border-radius: 30rpx;
  min-width: auto; /* 移除最小宽度限制 */
}

.btn-outline.btn-xs {
  padding: 10rpx 10rpx;
}

.btn-xxs {
  padding: 12rpx 8rpx; /* 再进一步减小左右padding，使宽度缩小一半 */
  font-size: 18rpx;
  border-radius: 30rpx;
  min-width: auto; /* 移除最小宽度限制 */
}

/* 多宝宝信息列表 */
.babies-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.baby-info-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.baby-info-item .baby-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.baby-info-item .baby-avatar-section {
  display: flex;
  align-items: center;
  flex: 1;
}

.baby-info-item .baby-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.baby-info-item .baby-details {
  flex: 1;
}

.baby-info-item .baby-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.baby-info-item .baby-age {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.baby-info-item .baby-stats {
  display: flex;
  justify-content: space-around;
}

.baby-info-item .stat-item {
  text-align: center;
  flex: 1;
}

.baby-info-item .stat-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.baby-info-item .stat-label {
  font-size: 20rpx;
  color: #999;
  display: block;
}

.baby-info-item .baby-actions {
  display: flex;
  gap: 8rpx;
  flex-shrink: 0;
}

.baby-info-item .action-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.baby-info-item .action-btn:active {
  background: #E9ECEF;
  transform: scale(0.95);
}

.baby-info-item .action-btn.delete {
  background: #FFF5F5;
  color: #E53E3E;
}

.baby-info-item .action-btn.delete:active {
  background: #FED7D7;
}

.baby-info-item .action-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.baby-info-item .action-text {
  font-size: 24rpx;
  color: #666666;
}

.baby-info-item .action-btn.delete .action-text {
  color: #E53E3E;
}

