.danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%) !important;
  color: white !important;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  gap: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  color: #333;
}

input, picker {
  width: 100%;
  padding: 20rpx;
  background: #F8F9FA;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
}

.gender-selector {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  cursor: pointer;
}

.gender-option.active {
  border-color: #667eea;
  background: #667eea;
  color: white;
}

.invite-instructions {
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.invite-code-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.invite-code-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.invite-actions {
  text-align: center;
}

.family-match-info {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f0f8ff;
  border-radius: 10rpx;
}

.match-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.match-family-card {
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.match-family-name {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.match-member-count {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.role-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.role-option {
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  text-align: center;
  cursor: pointer;
}

.role-option.active {
  border-color: #667eea;
  background: #667eea;
  color: white;
}

.text-medium {
  font-size: 32rpx;
}

.text-bold {
  font-weight: 600;
}

.picker {
  background: #F8F9FA;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333333;
}